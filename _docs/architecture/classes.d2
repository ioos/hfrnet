vars: {
  d2-config: {
    layout-engine: dagre
    theme-id: 300
  }
}

classes: {
  base: {
    style: {
      border-radius: 4
      shadow: false
    }
  }
  question: {
    style.stroke: red
  }
  error: {
    style.fill: pink
    style.stroke: pink
  }
  med: {
    width: 200
    height: 200
    style.font-size: 24
  }
  large: {
    width: 300
    height: 300
    style.font-size: 28
  }
  xlarge: {
    width: 400
    height: 400
    style.font-size: 32
  }
  person: {
    shape: person
    style.stroke-dash: 3
  }
}
